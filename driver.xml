               <item corresp="perseids:tlg0016.tlg001"><label>Hdt</label> = Herodotus, The
                  Histories</item>
               <item corresp="alpheios:tlg0085.tlg003.alpheios-text-grc1"><label>Aesch</label> =
                  Aeschylus Prometheus Bound</item>
               <item corresp="bmcoldts:LIT1546Genesi"><label>Gen.</label> = Book of Genesis,
                  Ethiopian</item>
               <item corresp="bmcoldts:BMLacq810"><label>BML acq. 810</label> = Biblioteca Medicea
                  Laurenziana, MS Acquisizioni e Doni 810.</item>
            </list>
